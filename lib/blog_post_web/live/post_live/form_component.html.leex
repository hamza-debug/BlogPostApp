<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "post-form",
  phx_target: @myself,
  phx_change: "validate",
phx_submit: "save" %>


<%= label f, :Title %>
<%= text_input f, :name %>
<%= error_tag f, :name %>

<%= label f, :body %>
<%= text_input f, :body %>
<%= error_tag f, :body %>


  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
